{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=cryptomarket.db"
  },
  "JwtSettings": {
    "SecretKey": "development_secret_key_min_32_chars_change_in_production_12345",
    "Issuer": "CryptoMarketApi",
    "Audience": "CryptoMarketClient",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false
  }
}
